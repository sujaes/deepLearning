<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.camera.CameraActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:orientation="vertical">

        <TextureView
            android:id="@+id/textureView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp" />

        <Button
            android:id="@+id/btn_rotation"
            android:layout_width="49dp"
            android:layout_height="70dp"
            android:layout_gravity="top"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/vertical_text_icon"
            android:visibility="visible" />


        <Button
            android:id="@+id/btn_switch_camera"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="top"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/camera_switch_icon"
            android:visibility="visible" />

    </FrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_album"
            android:layout_width="45dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/btn_still"
            android:layout_marginStart="26dp"
            android:background="@drawable/album_icon"
            android:fontFamily="@font/godofont"
            android:visibility="visible"
            tools:layout_editor_absoluteX="73dp"
            tools:layout_editor_absoluteY="300dp" />

        <Button
            android:id="@+id/btn_still"
            android:layout_width="45dp"
            android:layout_height="44dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:background="@drawable/recording_icon_fit"
            android:fontFamily="@font/godofont"
            android:visibility="visible"
            tools:layout_editor_absoluteX="73dp"
            tools:layout_editor_absoluteY="300dp" />

        <Chronometer
            android:id="@+id/chronometer"
            android:layout_width="49dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_album"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="94dp"
            android:fontFamily="@font/godofont"
            android:textColor="#fc4652"
            android:textSize="17dp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_record"
            android:layout_width="65dp"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/btn_still"
            android:layout_marginEnd="18dp"
            android:background="@drawable/recording_icon_else"
            android:fontFamily="@font/godofont"
            android:visibility="visible"
            tools:layout_editor_absoluteX="73dp"
            tools:layout_editor_absoluteY="300dp" />

    </RelativeLayout>





</LinearLayout>