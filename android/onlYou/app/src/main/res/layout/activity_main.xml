<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:background="@drawable/main_background"
    tools:context=".activity.main.MainActivity">

    <Button
        android:id="@+id/btn_camera"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="180dp"
        android:layout_marginStart="58dp"
        android:background="@drawable/img_camera_btn"
        android:fontFamily="@font/godofont"
        android:visibility="visible"
        tools:layout_editor_absoluteX="79dp"
        tools:layout_editor_absoluteY="289dp" />

    <Button
        android:id="@+id/btn_model"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btn_camera"
        android:layout_marginEnd="51dp"
        android:background="@drawable/img_model_btn"
        android:fontFamily="@font/godofont"
        android:visibility="visible"
        tools:layout_editor_absoluteX="220dp"
        tools:layout_editor_absoluteY="289dp" />

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_camera"
        android:layout_marginBottom="42dp"
        android:background="@drawable/img_edit_btn"
        android:fontFamily="@font/godofont"
        android:visibility="visible"
        tools:layout_editor_absoluteX="79dp"
        tools:layout_editor_absoluteY="406dp" />

    <Button
        android:id="@+id/btn_setting"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_alignStart="@+id/btn_model"
        android:layout_alignTop="@+id/btn_edit"
        android:background="@drawable/img_setting_btn"
        android:fontFamily="@font/godofont"
        android:visibility="visible"
        tools:layout_editor_absoluteX="220dp"
        tools:layout_editor_absoluteY="406dp" />

</RelativeLayout>